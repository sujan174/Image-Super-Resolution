<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - User Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style> body { font-family: 'Inter', sans-serif; } </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 min-h-screen bg-gray-800 p-4">
            <h1 class="text-2xl font-bold mb-8">Admin Panel</h1>
            <nav>
                <a href="/user/admin" class="block py-2.5 px-4 rounded hover:bg-gray-700">Analytics</a>
                <a href="/user/admin/users" class="block py-2.5 px-4 rounded bg-purple-600">Users</a>
                <a href="/upload" class="block py-2.5 px-4 rounded hover:bg-gray-700 mt-4">Back to App</a>
                <a href="/user/logout" class="block py-2.5 px-4 rounded hover:bg-gray-700">Logout</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            <% if (user) { %>
                <a href="/user/admin/users" class="text-purple-400 hover:underline mb-4 inline-block">&larr; Back to Users</a>
                <h2 class="text-3xl font-bold mb-2"><%= user.name %></h2>
                <p class="text-gray-400 mb-6"><%= user.email %></p>

                <h3 class="text-2xl font-bold mb-4 mt-8">Feedback History</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% feedback.forEach(item => { %>
                        <div class="bg-gray-800 rounded-lg overflow-hidden">
                            <img src="/images/<%= item.upscaledImageFilename %>" alt="Upscaled Image" class="w-full h-48 object-cover">
                            <div class="p-4">
                                <p class="text-sm"><span class="font-semibold">Model:</span> <%= item.modelUsed %></p>
                                <p class="text-sm"><span class="font-semibold">Scale:</span> <%= item.scaleFactor %>x</p>
                                <p class="text-sm"><span class="font-semibold">Liked:</span> 
                                    <% if (item.likedResult) { %>
                                        <span class="text-green-400">Yes</span>
                                    <% } else { %>
                                        <span class="text-red-400">No</span>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-red-400"><%= error %></p>
            <% } %>
        </div>
    </div>
</body>
</html>
