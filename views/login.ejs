<!-- Login page - User authentication with email/password or Google OAuth -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Image Upscaler - IT301 Project</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .glass-card {
            background: rgba(17, 24, 39, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .glow-text {
            text-shadow: 0 0 40px rgba(168, 85, 247, 0.4);
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="relative min-h-screen flex items-center justify-center p-6">
        
        <div class="flex flex-col lg:flex-row items-center justify-center gap-16 lg:gap-24 w-full max-w-7xl mx-auto">

            <!-- Left Side - Project Info -->
            <div class="w-full lg:w-1/2 space-y-10">
                <!-- Title Section -->
                <div class="space-y-4">
                    <h1 class="text-5xl md:text-6xl font-bold text-white glow-text tracking-tight">
                        AI Image Upscaler
                    </h1>
                    <div class="flex items-center gap-3">
                        <div class="h-px flex-1 bg-gradient-to-r from-transparent via-purple-500 to-transparent"></div>
                        <p class="text-lg text-gray-400 font-medium">IT301 Software Engineering Project</p>
                        <div class="h-px flex-1 bg-gradient-to-r from-transparent via-purple-500 to-transparent"></div>
                    </div>
                </div>

                <!-- Developer Cards -->
                <div class="space-y-6">
                    <h2 class="text-2xl font-semibold text-gray-200 mb-6">Development Team</h2>
                    <div class="grid gap-4">
                        <div class="glass-card rounded-xl p-5 hover:border-purple-500/50 transition-all duration-300 hover:scale-[1.02]">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold text-lg">
                                    SH
                                </div>
                                <div>
                                    <p class="font-semibold text-white text-lg">Sujan H</p>
                                    <p class="text-sm text-gray-400">Roll No: 231IT076</p>
                                </div>
                            </div>
                        </div>
                        <div class="glass-card rounded-xl p-5 hover:border-purple-500/50 transition-all duration-300 hover:scale-[1.02]">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold text-lg">
                                    SK
                                </div>
                                <div>
                                    <p class="font-semibold text-white text-lg">Sandesh K</p>
                                    <p class="text-sm text-gray-400">Roll No: 231IT061</p>
                                </div>
                            </div>
                        </div>
                        <div class="glass-card rounded-xl p-5 hover:border-purple-500/50 transition-all duration-300 hover:scale-[1.02]">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold text-lg">
                                    TW
                                </div>
                                <div>
                                    <p class="font-semibold text-white text-lg">Tushar Wadiwa</p>
                                    <p class="text-sm text-gray-400">Roll No: 231IT081</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="w-full lg:w-1/2 flex justify-center">
                <div class="glass-card rounded-2xl shadow-2xl w-full max-w-md">
                    <div class="p-8 md:p-10">
                        <div class="text-center mb-8">
                            <h2 class="text-3xl font-bold text-white">Welcome Back</h2>
                            <p class="text-gray-400 mt-2">Sign in to continue</p>
                        </div>

                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6">
                                <%= error %>
                            </div>
                        <% } %>

                        <form action="/user/login" method="POST" class="space-y-5">
                            <div>
                                <label for="email" class="block mb-2 text-sm font-medium text-gray-300">Email Address</label>
                                <input 
                                    type="email" 
                                    id="email" 
                                    name="email" 
                                    class="w-full px-4 py-3 bg-gray-900/60 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" 
                                    placeholder="you@example.com"
                                    required>
                            </div>
                            <div>
                                <label for="password" class="block mb-2 text-sm font-medium text-gray-300">Password</label>
                                <input 
                                    type="password" 
                                    id="password" 
                                    name="password" 
                                    class="w-full px-4 py-3 bg-gray-900/60 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" 
                                    placeholder="••••••••"
                                    required>
                            </div>
                            <button 
                                type="submit" 
                                class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-300 shadow-lg hover:shadow-purple-500/50">
                                Sign In
                            </button>
                        </form>

                        <div class="relative my-8">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-700"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="bg-gray-800 px-3 text-gray-400">OR</span>
                            </div>
                        </div>

                        <a 
                            href="/user/auth/google" 
                            class="w-full flex items-center justify-center gap-3 bg-white hover:bg-gray-100 text-gray-800 font-semibold py-3 px-4 rounded-lg transition-all duration-300 shadow-lg">
                            <svg class="w-5 h-5" viewBox="0 0 48 48">
                                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                                <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                                <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                            </svg>
                            Sign in with Google
                        </a>

                        <p class="text-center text-gray-400 text-sm mt-8">
                            Don't have an account? 
                            <a href="/user/signup" class="font-semibold text-purple-400 hover:text-purple-300 transition-colors">
                                Sign up
                            </a>
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
