<!-- Gallery page - Display user's history of upscaled images -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Gallery</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script type="module" src="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/index.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/style.css" />
    <style> 
        body { font-family: 'Inter', sans-serif; } 
        img-comparison-slider {
            --divider-width: 3px;
            --divider-color: #8B5CF6;
            --handle-size: 50px;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="absolute top-4 right-4 flex items-center space-x-4 z-20">
        <a href="/upload" class="text-sm font-medium bg-gray-800/50 border border-gray-700 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200 px-4 py-2 rounded-full">Upload</a>
        <a href="/user/gallery" class="text-sm font-medium bg-purple-600/50 border border-purple-500 text-white transition-colors duration-200 px-4 py-2 rounded-full">My Gallery</a>
        <% if (typeof user !== 'undefined' && user.admin) { %>
            <a href="/user/admin" class="text-sm font-medium bg-yellow-600/50 border border-yellow-500 text-yellow-300 hover:bg-yellow-700 hover:text-white transition-colors duration-200 px-4 py-2 rounded-full">Admin</a>
        <% } %>
        <a href="/user/logout" class="text-sm font-medium bg-gray-800/50 border border-gray-700 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200 px-4 py-2 rounded-full">Logout</a>
    </div>

    <div class="container mx-auto p-4 sm:p-8">
        <div class="text-center mb-8 pt-16">
            <h1 class="text-3xl font-bold">My Gallery</h1>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="bg-red-500/20 text-red-300 p-4 rounded-lg mb-6"><%= error %></div>
        <% } %>

        <% if (images.length === 0) { %>
            <div class="text-center py-20">
                <p class="text-gray-400">You haven't upscaled any images yet.</p>
                <a href="/upload" class="mt-4 inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg">Upload Your First Image</a>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% images.forEach(image => { %>
                    <% if (image.originalPath && image.upscaledPath) { %>
                        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
                            <div class="image-comparison-container bg-black" data-original-src="/images/<%= image.originalPath %>">
                                <img-comparison-slider>
                                    <img slot="first" src="/images/<%= image.originalPath %>" alt="Original Image" style="object-fit: contain; width: 100%; height: 100%;">
                                    <img slot="second" src="/images/<%= image.upscaledPath %>" alt="Upscaled Image" style="object-fit: contain; width: 100%; height: 100%;">
                                </img-comparison-slider>
                            </div>
                            <div class="p-4">
                                <div class="mb-4 text-xs space-y-1">
                                    <p><span class="font-semibold text-gray-400">Model:</span> <%= image.modelUsed %></p>
                                    <p><span class="font-semibold text-gray-400">Scale:</span> <%= image.scaleFactor %>x</p>
                                </div>
                                <div class="flex gap-2">
                                    <a href="/images/<%= image.originalPath %>" download class="flex-1 text-center text-xs bg-gray-700 hover:bg-gray-600 text-gray-300 font-semibold py-2 px-3 rounded-lg">
                                        Download Original
                                    </a>
                                    <a href="/images/<%= image.upscaledPath %>" download class="flex-1 text-center text-xs bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-3 rounded-lg">
                                        Download Upscaled
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        <% } %>
    </div>

    <script>
        document.querySelectorAll('.image-comparison-container').forEach(container => {
            const originalSrc = container.dataset.originalSrc;
            if (originalSrc) {
                const img = new Image();
                img.src = originalSrc;
                img.onload = () => {
                    container.style.aspectRatio = img.naturalWidth / img.naturalHeight;
                };
            }
        });
    </script>
</body>
</html>
