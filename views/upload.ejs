<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Image Upscaler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .animate-blob {
            animation: blob 8s infinite;
        }
        .animation-delay-2000 {
            animation-delay: -2s;
        }
        .animation-delay-4000 {
            animation-delay: -4s;
        }
        @keyframes blob {
            0% {
                transform: translate(0px, 0px) scale(1);
            }
            33% {
                transform: translate(40px, -60px) scale(1.1);
            }
            66% {
                transform: translate(-30px, 30px) scale(0.9);
            }
            100% {
                transform: translate(0px, 0px) scale(1);
            }
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="relative min-h-screen flex items-center justify-center p-4 overflow-hidden">
        
        <div class="absolute top-0 -left-4 w-72 h-72 bg-purple-600 rounded-full mix-blend-screen filter blur-xl opacity-20 animate-blob"></div>
        <div class="absolute top-0 -right-4 w-72 h-72 bg-blue-500 rounded-full mix-blend-screen filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-500 rounded-full mix-blend-screen filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>

        <div class="relative w-full max-w-lg bg-gray-800/50 backdrop-blur-lg rounded-2xl shadow-2xl shadow-black/30 border border-gray-700">
            <div class="absolute top-4 right-4">
                <a href="/user/logout" class="text-sm font-medium text-gray-400 hover:text-white transition-colors duration-200">Logout</a>
            </div>
            <div class="p-8 md:p-10">
                <div class="text-center mb-6">
                    <h1 class="text-3xl font-bold tracking-tight">AI Image Upscaler</h1>
                    <p class="text-gray-400 mt-2">Enhance your images to a higher resolution.</p>
                </div>

                <div id="message-container">
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                </div>

                <form id="uploadForm">
                    <div class="space-y-6">
                        <div>
                            <label for="modelType" class="block mb-2 text-sm font-medium text-gray-300">Upscaling Model</label>
                            <div class="relative" id="custom-select-wrapper">
                                <select name="modelType" id="modelType" class="hidden">
                                    <option value="EDSR">EDSR</option>
                                    <option value="RealESRGAN">Real-ESRGAN</option>
                                    <option value="SwinIR">SwinIR</option>
                                </select>
                                <div id="custom-select-trigger" class="flex items-center justify-between w-full px-4 py-3 bg-gray-900/60 border border-gray-700 rounded-lg cursor-pointer">
                                    <span id="custom-select-value">EDSR</span>
                                    <svg class="w-5 h-5 text-gray-400" id="custom-select-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                                </div>
                                <div id="custom-select-options" class="absolute z-10 w-full mt-2 bg-gray-900 border border-gray-700 rounded-lg shadow-lg hidden">
                                    <div class="p-1">
                                        <div class="custom-option p-2 rounded-md hover:bg-purple-600 cursor-pointer" data-value="EDSR">EDSR</div>
                                        <div class="custom-option p-2 rounded-md hover:bg-purple-600 cursor-pointer" data-value="RealESRGAN">Real-ESRGAN</div>
                                        <div class="custom-option p-2 rounded-md hover:bg-purple-600 cursor-pointer" data-value="SwinIR">SwinIR</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-300">Scale Factor</label>
                            <div id="scaleButtons" class="grid grid-cols-3 gap-2">
                                <button type="button" data-scale="2" class="scale-btn w-full py-2 rounded-lg bg-gray-700">2x</button>
                                <button type="button" data-scale="3" class="scale-btn w-full py-2 rounded-lg bg-gray-700">3x</button>
                                <button type="button" data-scale="4" class="scale-btn w-full py-2 rounded-lg bg-purple-600">4x</button>
                            </div>
                            <input type="hidden" id="scale" name="scale" value="4">
                        </div>

                        <div class="border-2 border-dashed border-gray-600 rounded-lg p-8 text-center cursor-pointer" onclick="document.getElementById('imageFile').click();">
                            <label for="imageFile" class="font-medium text-gray-400 cursor-pointer">Click to choose an image</label>
                            <input type="file" id="imageFile" name="imageFile" accept="image/*" class="hidden" required>
                            <div id="fileName" class="mt-2 text-sm text-purple-400"></div>
                        </div>

                        <div>
                            <button type="submit" id="submit-btn" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg transition-all duration-300">
                                Upscale Image
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const uploadForm = document.getElementById('uploadForm');
        const submitBtn = document.getElementById('submit-btn');
        const messageContainer = document.getElementById('message-container');
        
        uploadForm.addEventListener('submit', async (event) => {
            event.preventDefault();
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Processing...';
            submitBtn.classList.remove('bg-purple-600', 'hover:bg-purple-700');
            submitBtn.classList.add('bg-gray-600', 'cursor-not-allowed');
            messageContainer.innerHTML = '';

            const formData = new FormData(uploadForm);
            
            try {
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData,
                });

                if (response.redirected) {
                    const finalUrl = new URL(response.url);
                    if (finalUrl.pathname.includes('/result')) {
                        window.location.href = response.url;
                    } else if (finalUrl.searchParams.has('error')) {
                        const errorMessage = finalUrl.searchParams.get('error');
                        messageContainer.innerHTML = `<div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center" role="alert">${errorMessage}</div>`;
                        resetButton();
                    }
                } else {
                    const errorText = await response.text();
                    messageContainer.innerHTML = `<div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center" role="alert">${errorText}</div>`;
                    resetButton();
                }
            } catch (error) {
                console.error('Submission error:', error);
                messageContainer.innerHTML = `<div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center" role="alert">An unexpected error occurred.</div>`;
                resetButton();
            }
        });

        function resetButton() {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Upscale Image';
            submitBtn.classList.add('bg-purple-600', 'hover:bg-purple-700');
            submitBtn.classList.remove('bg-gray-600', 'cursor-not-allowed');
        }

        // --- UI Logic for dropdown, buttons, etc. ---
        const imageFileInput = document.getElementById('imageFile');
        const fileNameDiv = document.getElementById('fileName');
        const scaleButtonsContainer = document.getElementById('scaleButtons');
        const scaleInput = document.getElementById('scale');
        const selectWrapper = document.getElementById('custom-select-wrapper');
        const selectTrigger = document.getElementById('custom-select-trigger');
        const selectValue = document.getElementById('custom-select-value');
        const selectOptions = document.getElementById('custom-select-options');
        const nativeSelect = document.getElementById('modelType');

        selectTrigger.addEventListener('click', () => {
            selectOptions.classList.toggle('hidden');
        });

        selectOptions.addEventListener('click', (e) => {
            if (e.target.classList.contains('custom-option')) {
                selectValue.textContent = e.target.dataset.value;
                nativeSelect.value = e.target.dataset.value;
                selectOptions.classList.add('hidden');
            }
        });
        
        document.addEventListener('click', (e) => {
            if (!selectWrapper.contains(e.target)) {
                selectOptions.classList.add('hidden');
            }
        });

        imageFileInput.addEventListener('change', () => {
            fileNameDiv.textContent = imageFileInput.files.length > 0 ? imageFileInput.files[0].name : '';
        });

        scaleButtonsContainer.addEventListener('click', (event) => {
            const clickedButton = event.target.closest('.scale-btn');
            if (!clickedButton) return;
            scaleInput.value = clickedButton.dataset.scale;
            scaleButtonsContainer.querySelectorAll('.scale-btn').forEach(btn => {
                btn.classList.remove('bg-purple-600');
                btn.classList.add('bg-gray-700');
            });
            clickedButton.classList.add('bg-purple-600');
            clickedButton.classList.remove('bg-gray-700');
        });
    </script>

</body>
</html>
