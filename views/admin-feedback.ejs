<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - <%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style> body { font-family: 'Inter', sans-serif; } </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 min-h-screen bg-gray-800 p-4">
            <h1 class="text-2xl font-bold mb-8">Admin Panel</h1>
            <nav>
                <a href="/user/admin" class="block py-2.5 px-4 rounded hover:bg-gray-700">Analytics</a>
                <a href="/user/admin/users" class="block py-2.5 px-4 rounded hover:bg-gray-700">Users</a>
                <a href="/user/admin/feedback?status=liked" class="block py-2.5 px-4 rounded <%= title === 'Liked Images' ? 'bg-purple-600' : 'hover:bg-gray-700' %>">Liked Images</a>
                <a href="/user/admin/feedback?status=disliked" class="block py-2.5 px-4 rounded <%= title === 'Disliked Images' ? 'bg-purple-600' : 'hover:bg-gray-700' %>">Disliked Images</a>
                <a href="/upload" class="block py-2.5 px-4 rounded hover:bg-gray-700 mt-4">Back to App</a>
                <a href="/user/logout" class="block py-2.5 px-4 rounded hover:bg-gray-700">Logout</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-3xl font-bold"><%= title %> (<%= feedback.length %>)</h2>
                <% if (feedback.length > 0) { %>
                    <a href="/user/admin/download-feedback?status=<%= title === 'Liked Images' ? 'liked' : 'disliked' %>" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg">
                        Download All
                    </a>
                <% } %>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% feedback.forEach(item => { %>
                    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
                        <img src="/images/<%= item.upscaledImageFilename %>" alt="Upscaled Image" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <p class="text-sm"><span class="font-semibold text-gray-400">User:</span> <%= item.userId ? item.userId.name : 'N/A' %></p>
                            <p class="text-sm"><span class="font-semibold text-gray-400">Model:</span> <%= item.modelUsed %></p>
                            <p class="text-sm"><span class="font-semibold text-gray-400">Scale:</span> <%= item.scaleFactor %>x</p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>
