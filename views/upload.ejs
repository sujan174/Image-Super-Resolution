<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Image Upscaler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .animate-blob { animation: blob 8s infinite; }
        @keyframes blob {
            0%, 100% { transform: translate(0px, 0px) scale(1); }
            33% { transform: translate(40px, -60px) scale(1.1); }
            66% { transform: translate(-30px, 30px) scale(0.9); }
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="absolute top-4 right-4 flex items-center space-x-4 z-20">
        <a href="/user/gallery" class="text-sm font-medium bg-gray-800/50 border border-gray-700 text-gray-300 hover:bg-gray-700 px-4 py-2 rounded-full">My Gallery</a>
        <% if (typeof user !== 'undefined' && user.admin) { %>
            <a href="/user/admin" class="text-sm font-medium bg-yellow-600/50 border border-yellow-500 text-yellow-300 hover:bg-yellow-700 px-4 py-2 rounded-full">Admin</a>
        <% } %>
        <a href="/user/logout" class="text-sm font-medium bg-gray-800/50 border border-gray-700 text-gray-300 hover:bg-gray-700 px-4 py-2 rounded-full">Logout</a>
    </div>

    <div class="relative min-h-screen flex items-center justify-center p-4 overflow-hidden">
        <div class="absolute top-0 -left-4 w-72 h-72 bg-purple-600 rounded-full mix-blend-screen filter blur-xl opacity-20 animate-blob"></div>
        <div class="absolute top-0 -right-4 w-72 h-72 bg-blue-500 rounded-full mix-blend-screen filter blur-xl opacity-20 animate-blob" style="animation-delay: -2s;"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-500 rounded-full mix-blend-screen filter blur-xl opacity-20 animate-blob" style="animation-delay: -4s;"></div>

        <div class="relative w-full max-w-lg bg-gray-800/50 backdrop-blur-lg rounded-2xl shadow-2xl shadow-black/30 border border-gray-700">
            <div class="absolute top-4 left-4">
                <% if (typeof user !== 'undefined' && user.name) { %>
                    <span class="text-sm font-medium text-gray-400">Welcome, <%= user.name %></span>
                <% } %>
            </div>
            
            <div class="p-8 md:p-10">
                <div class="text-center mb-6">
                    <h1 class="text-3xl font-bold tracking-tight">AI Image Upscaler</h1>
                    <p class="text-gray-400 mt-2">Enhance your images to a higher resolution.</p>
                </div>

                <div id="message-container">
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                </div>

                <form id="uploadForm">
                    <div class="space-y-6">
                        <div>
                            <div class="flex items-center gap-2 mb-2">
                                <label class="text-sm font-medium text-gray-300">Upscaling Model</label>
                                <button type="button" id="info-btn" class="text-gray-400 hover:text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" /></svg>
                                </button>
                            </div>
                            <select name="modelType" class="w-full px-4 py-3 bg-gray-900/60 border border-gray-700 rounded-lg">
                                <option value="EDSR">EDSR</option>
                                <option value="RealESRGAN">RealESRGAN</option>
                                <option value="SwinIR">SwinIR</option>
                            </select>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-300">Scale Factor</label>
                            <div id="scaleButtons" class="grid grid-cols-3 gap-2">
                                <button type="button" data-scale="2" class="scale-btn w-full py-2 rounded-lg bg-gray-700">2x</button>
                                <button type="button" data-scale="3" class="scale-btn w-full py-2 rounded-lg bg-gray-700">3x</button>
                                <button type="button" data-scale="4" class="scale-btn w-full py-2 rounded-lg bg-purple-600">4x</button>
                            </div>
                            <input type="hidden" id="scale" name="scale" value="4">
                        </div>

                        <div class="border-2 border-dashed border-gray-600 rounded-lg p-8 text-center cursor-pointer" onclick="document.getElementById('imageFile').click();">
                            <label for="imageFile" class="font-medium text-gray-400 cursor-pointer">Click to choose an image</label>
                            <input type="file" id="imageFile" name="imageFile" accept="image/*" class="hidden" required>
                            <div id="fileName" class="mt-2 text-sm text-purple-400"></div>
                        </div>

                        <div>
                            <button type="submit" id="submit-btn" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg">
                                Upscale Image
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        const uploadForm = document.getElementById('uploadForm');
        const submitBtn = document.getElementById('submit-btn');
        const messageContainer = document.getElementById('message-container');
        
        uploadForm.addEventListener('submit', async (event) => {
            event.preventDefault();
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Processing...';
            submitBtn.classList.remove('bg-purple-600', 'hover:bg-purple-700');
            submitBtn.classList.add('bg-gray-600', 'cursor-not-allowed');
            messageContainer.innerHTML = '';

            const formData = new FormData(uploadForm);
            
            try {
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData,
                });

                if (response.redirected) {
                    window.location.href = response.url;
                } else if (!response.ok) {
                    const errorText = await response.text();
                    messageContainer.innerHTML = `<div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center">${errorText}</div>`;
                    resetButton();
                }
            } catch (error) {
                console.error('Submission error:', error);
                messageContainer.innerHTML = `<div class="bg-red-500/10 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-6 text-center">An unexpected error occurred.</div>`;
                resetButton();
            }
        });

        function resetButton() {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Upscale Image';
            submitBtn.classList.add('bg-purple-600', 'hover:bg-purple-700');
            submitBtn.classList.remove('bg-gray-600', 'cursor-not-allowed');
        }

        const imageFileInput = document.getElementById('imageFile');
        const fileNameDiv = document.getElementById('fileName');
        const scaleButtonsContainer = document.getElementById('scaleButtons');
        const scaleInput = document.getElementById('scale');

        imageFileInput.addEventListener('change', () => {
            fileNameDiv.textContent = imageFileInput.files.length > 0 ? imageFileInput.files[0].name : '';
        });

        scaleButtonsContainer.addEventListener('click', (event) => {
            const clickedButton = event.target.closest('.scale-btn');
            if (!clickedButton) return;
            scaleInput.value = clickedButton.dataset.scale;
            scaleButtonsContainer.querySelectorAll('.scale-btn').forEach(btn => {
                btn.classList.remove('bg-purple-600');
                btn.classList.add('bg-gray-700');
            });
            clickedButton.classList.add('bg-purple-600');
            clickedButton.classList.remove('bg-gray-700');
        });
    </script>
</body>
</html>
